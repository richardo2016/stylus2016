@require './variables'

/* button */
button()
  padding 0 16px
  min-width 64px
  height 32px
  if forbidden
    blur 2px

primary-btn(forbidden = false)
  background $primary-color
  &:hover
    $dark-primary-color
  color $text-icon
  // +button()

/* emotions */
accent()
  background-color $accent-color
  color white

badge(width = 20px)
  border-radius 100%
  width width
  height width
  cursor pointer
  line-height 20px

no-margin-v()
  margin-top 0
  margin-bottom 0

no-margin-h()
  margin-left 0
  margin-right 0

no-margin(force=true)
  if force
    no-margin-v()
    no-margin-h()
  else
    margin 0

no-padding-v()
  padding-top 0
  padding-bottom 0

no-padding-h()
  padding-left 0
  padding-right 0

no-padding(force=true)
  if force
    no-padding-v()
    no-padding-h()
  else
    padding 0

main-width()
  max-width $content-width
  margin-left auto
  margin-right auto

/* page layout */
$page-main-height-offset = !$global-quirk-model ? $size-offset : 0
page-main-height(useAbsHeight = false)
  padding $size-offset $size-offset 0 $size-offset

  min-height 'calc(100% - %s)' % ( $page-main-height-offset + $footerHeight + 1px)
  if useAbsHeight
    height 'calc(100% - %s)' % ( $page-main-height-offset + $footerHeight + 1px)


page-main-height-with-top-tips(useAbsHeight = false)
  padding $size-offset $size-offset 0 $size-offset
  min-height 'calc(100% - %s)' % ($page-main-height-offset + $footerHeight + $top-tips-height + 1px)
  if useAbsHeight
    height 'calc(100% - %s)' % ($page-main-height-offset + $footerHeight + $top-tips-height + 1px)

/* shadow */
inbox-shadow()
  box-shadow inset 0 1px 8px #e8bebe

border-shadow()
  box-shadow inset 0 -1px 0 0 rgba(0,0,0,0.12)

/* colors */
RGBA(r, g, b, alpha, supportIE8 = true)
  if supportIE8
    color lighten(rgb(r, g, b), alpha)
  color rgba(r, g, b, alpha)

/* opacity */
back-opacity(color, opacity=0.5)
  background color
  filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + (opacity*100) +')')
  background rgba(color, .7)

/* border and spliter */
hr(padding = 0, margin = 0)
  width 100%
  display block
  border 1px solid #eee

/* transition */
show-transition(sec, func = linear)
  transition opacity sec, visibility sec, height sec func, width sec func
